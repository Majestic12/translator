<% locale, key = params[:key].split(".")[0].to_sym, params[:key].sub(/^[a-z0-9\-_]*\./i, '') %>
$("#<%= params[:key].gsub('.', '-') %>").replaceWith('<%= escape_javascript render(:partial => "form", :locals => {:locale => locale, :key => key, :save_status => @success, :saved_value => @key_value}) %>');
